/* pages/index1/index1.wxss */
.wrap{
    position: relative;
    width: 100%;
    height: 1000rpx;
}
.form_wrap{
    position: relative;
    width: 100%;
}
.input_wrap{
    display: flex;
    flex-direction: row;
    width: 100%;
}

.section{
    /* padding: 40rpx; */
    flex: 1;
    height: 100rpx;
    position: relative;
}
.section__title{
    text-align: center;
    height: 80rpx;
    line-height: 80rpx;
    font-size: 40rpx;
    font-weight: 600;
    padding-bottom: 40rpx;
}
.input{
    border-bottom: 1px solid #000;
    line-height: 100rpx;
    height: 100rpx;
    box-sizing: border-box;
    padding-left: 20rpx;
}
.btn-area{
    width: 200rpx;
}
.sub_btn{
    /* background: green; */
    color: #fff;
}
.result_wrap{
    position: absolute;
    left: 0;
    top: 100rpx;
    z-index: 22;
    max-height: 600rpx;
    width: 100%;
    background: rgba(123, 123, 123, 0.5);
}
.result_con{
    width: 100%;
    height: 100%;
}
.result_item{
    border-bottom: 10rpx solid red;
    line-height: 100rpx;
    padding-left: 10rpx;
}

