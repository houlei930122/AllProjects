page{
  position: relative;
  width: 100%;
  height: 100%;
  background: #333;
  background:linear-gradient(180deg,rgba(51,51,51,1) 0%,rgba(0,0,0,1) 100%);
}
.container{
  position: relative;
  width: 100%;
  height: 100%;
}
.content{
  position: absolute;
  left: 0;
  top: 45%;
  width: 100%;
  height: 1200rpx;
  transform: translateY(-50%);
  padding-bottom: 70rpx;
}
.swiper_wrap {
  position: relative;
  width: 100%;
  height: 100%;
}
 
.slide-image {
  position: absolute;
  width: 100%; 
  left: 0;
  bottom: 50rpx; 
  
}
 
image.active {
  transform: scale(1);
  transition: all 0.2s ease-in 0s;
} 
image.active.active_no{
  transition: none;
}
image.quiet.active_no{
  transition: none;
}
image.quiet {
  transform: scale(0.9);
  transition: all 0.2s ease-in 0s;
}

.content .next_btn{
  position: absolute;
  left: 50%;
  bottom: 0;
  margin-left: -285rpx;
  width:570rpx;
  height:68rpx;
  text-align: center;
  line-height: 68rpx;
  background:linear-gradient(240deg,rgba(235,172,42,1) 0%,rgba(255,225,101,1) 100%);
  border-radius:37rpx;
  font-size:28rpx;
  font-family:MicrosoftYaHei;
  color:rgba(51,51,51,1);
}