page{
    width: 100%;
    height: 100%;
}
.container{
    position: relative;
    width: 100%;
    height: 100%;
    color: #FFFFFF;
}
.content{
    position: relative;
    width: 100%;
    height: 100%;
}
.content .all-city{
    position: relative;
    width: 100%;
    height: 100%;
}
.city-scroll { 
    position: fixed;
    left: 0;
    top: 0;
    height: 100%;
    width: 100%;
}
.hotadd_wrap{
    position: relative;
    width: 100%;
    padding: 40rpx 0 0 40rpx;
}
.hotadd_wrap .hot_tit{
    position: relative;
    width: 100%;
    font-size:28rpx;
    font-family:MicrosoftYaHei;
    color:#9C9C9C;
}
.hot_tit text {
    font-size: 24rpx;
    font-family: MicrosoftYaHei;
    color: #7E7E7E; 
}
    
.hotadd_wrap .hot_list{
    position: relative;
    width: 100%;
    overflow: hidden;
    padding-top: 30rpx;
}
.hot_list .hot_item{
    float: left;
    width: 138rpx;
    height:60rpx;
    line-height:60rpx;
    border:1rpx solid rgba(59,59,59,1);
    text-align: center;
    font-size:24rpx;
    font-family:MicrosoftYaHei;
    color:rgba(255,255,255,1);
    margin:0 40rpx 30rpx 0;
}
.hot_list .hot_item:nth-of-type(4n+4){
    margin:0 0 30rpx 0;
}
.hot_list .hot_item.act{
    border:1px solid;
    border-image:linear-gradient(90deg, rgba(255,226,102,1), rgba(190,157,84,1)) 2 2;
}
.sign_wrap{
    position: relative;
    width: 100%;
    padding:20rpx 0 20rpx 40rpx;
}
.sign_wrap::after{
    content: '';
    position: absolute;
    left: 40rpx;
    bottom: 0;
    right: 40rpx;
    height: 2rpx;
    background: #3B3B3B;
}
.nav-text{
    position: relative;
    line-height: 70rpx;
    font-size:28rpx;
    font-family:MicrosoftYaHei;
}
.show-city{
    position: relative;
    line-height: 70rpx;
    font-size:24rpx;
    font-family:MicrosoftYaHei;
}
.search-nav{
    position: fixed;
    top: 0;
    bottom: 5rpx;
    right: 5rpx;
    display:flex;
    flex-direction: column;
    justify-content: space-around;
}
 
.search-nav text{
    text-align: center;
    font-size: 24rpx;
}

.tong_wrap{
    position: relative;
    width: 100%;
    padding-top: 40rpx;
}
.tong_wrap .tong_tit{
    position: relative;
    width: 100%;
    padding-left: 40rpx;
    font-size:28rpx;
    font-family:MicrosoftYaHei;
    color:#9C9C9C;
    line-height:37rpx;
}
.tong_tit text{
    font-size:24rpx;
    font-family:MicrosoftYaHei;
    color:#7E7E7E;
}
.tong_img{
    position: relative;
    width: 100%;
    padding: 30rpx 0 0 40rpx;
    overflow: hidden;
}
.tong_img::after{
    content: '';
    position: absolute;
    left: 40rpx;
    bottom: 0;
    right: 40rpx;
    height:2rpx;
    background: #333333;
    z-index: 9;
}
.tong_img .timg_wrap{
    float: left;
    position: relative;
    width:316rpx;
    height:125rpx;
    background:rgba(0,0,0,0.1);
    border-radius:4rpx;  
    margin-bottom: 40rpx;
}
.tong_img .timg_wrap.timg1{
    margin-right: 40rpx;
}
.timg_wrap .t_img{
    position: relative;
    width: 100%;
    height: 100%;
}
.timg_wrap .t_msg{
    position: absolute;
    left: 0;
    top: 50%;
    margin-top: -16rpx;
    width: 100%;
    height:32rpx;
    font-size:24rpx;
    font-family:MicrosoftYaHei;
    color:rgba(255,255,255,1);
    line-height:32rpx;
    text-shadow:0px 2rpx 4rpx rgba(0,0,0,0.5);
    text-align: center;
}

